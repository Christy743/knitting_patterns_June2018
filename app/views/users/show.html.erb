<% if current_user = @user.id %>
  <h2><%= @user.username %>'s Profile</h2>
    <p>Email address: <%= @user.email %></p>
    <p>Bio: <%= @user.bio %></p><br />

  <h3>Your patterns: </h3>
    <% @user.patterns.each_with_index do |pattern, i| %>
      <p><%= i + 1 %>. <%= link_to pattern.name.capitalize, pattern_path(pattern.id) %></p><br />
    <% end %>

<h2>Favorite Patterns</h2>

<ul>

  <% @user.favorites.each_with_index do |favorite, i| %>
    <li><%= i + 1 %>. <%= link_to favorite, favorite_pattern_path %></li>
    <% end %>
</ul>


<br />
  <%= link_to "Edit your profile", edit_user_path %>

<% end %>
